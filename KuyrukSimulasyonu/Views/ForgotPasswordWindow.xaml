<Window x:Class="KuyrukSimulasyonu.Views.ForgotPasswordWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Şifremi Unuttum" Height="300" Width="400" Background="#FAFAFA">
    <Grid Margin="20">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*" />
            <RowDefinition Height="Auto" />
        </Grid.RowDefinitions>

        <!-- Başlık -->
        <StackPanel Grid.Row="0" HorizontalAlignment="Center" VerticalAlignment="Center">
            <TextBlock Text="Şifremi Unuttum" FontSize="24" FontWeight="Bold" Foreground="#333" Margin="0,0,0,20"/>
        </StackPanel>

        <!-- Şifre Sıfırlama Formu -->
        <StackPanel Grid.Row="1" VerticalAlignment="Center">
            <Grid Margin="0,10">
                <TextBox Name="emailTextBox" FontSize="16" Padding="10" Background="#FFF" 
                         Text="E-posta Adresi" Foreground="Gray" GotFocus="RemoveText" LostFocus="AddText"/>
            </Grid>
        </StackPanel>

        <!-- Gönder Butonu -->
        <Button Grid.Row="2" Content="Gönder" FontSize="18" Padding="10" Margin="0,20"
                Background="#4CAF50" Foreground="White" BorderBrush="{x:Null}" Click="SendButton_Click"/>
    </Grid>
</Window>
